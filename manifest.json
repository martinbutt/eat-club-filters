{
  "manifest_version": 2,

  "name": "Eat Club Filters",
  "description": "Filter the Eat Club menu for your dietary preferences",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab",
    "http://www.eatclub.com/*"
  ],
  "content_scripts": [{
    "matches": ["*://*.eatclub.com/*"],
    "js": ["vendor/jquery.js", "content.js"],
    "all_frames": true,
    "run_at": "document_end"
  }]
}
